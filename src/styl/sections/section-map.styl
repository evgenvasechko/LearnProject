.map {
    @media screen and (max-width: 767px) {
        display: none
    }
    .container {
        position: relative;
    }
    &__header {
        color: #333;
        font-weight: 600;
        line-height: 2;
        margin-top: 9rem;
        text-align: center;
    }
    &__images {
        position: relative;
    }
    &__nav {
        width: 100%;
        height: auto;
        margin-bottom: 4rem;
    }
    &__coordinate {
        height: 5.6rem;
        position: absolute;
        cursor: pointer;
        &_phoenix {
            left: 23.5%;
            bottom: 30.3%;
            z-index: 3;
        }
        &_canada {
            left: 7.5%;
            top: 21.3%;
            z-index: 3;
        }
        &_greenland {
            left: 30.5%;
            top: 3.3%;
            z-index: 3;
        }
        &_africa {
            left: 49.5%;
            top: 47.3%;
            z-index: 3;
        }
        &_europe {
            left: 58%;
            top: 22.3%;
            z-index: 3;
        }
        &_russia {
            left: 69%;
            top: 30.3%;
            z-index: 3;
        }
        &_australia {
            right: 8.5%;
            bottom: 20.3%;
            z-index: 3;
        }
    }
    &__popups {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
    }
}

.coordinate {
    &__popup {
        width: 362px;
        height: auto;
        text-align: center;
        position: absolute;
        background: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(219,219,219,0.6);
        &:after {
            content: "";
            display: block;
            position: absolute;
            width: 2.5rem;
            height: 2.5rem;
            background: #fff;
            left: 50%;    transform: rotate(45deg);
            margin-top: -2rem;
        }
        @media screen and (max-width: 768px) {
            display: none    
        }
    }
    &__header {
        color: #8e66ee;
        font-size: 1.6rem;
        padding: 2rem 0 1rem 0;
    }
    &__adress {
        font-size: 1.6rem;
        color: #818181;
        font-weight: 300;
        padding-bottom: 3.5rem;
        line-height: 1.5;
    }
}
