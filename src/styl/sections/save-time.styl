.save-time {
    background: linear-gradient(135deg, #c944eb 0%,#05abe0 100%,#319af2 100%);
    text-align: center;
    padding: 8.3rem 0;

    .container {
        max-width: 80rem;
        margin: 0 auto;
        @media screen and (max-width: 767px) {
            width: 90%
            margin: 0 auto
        }
        }
    &__header {
        color: #ffffff;
        font-weight: 600;
        line-height: 2;
    }

    &__text {
        color: #ffffff;
        font-weight: 300;
        line-height: 1.5;
    }
}